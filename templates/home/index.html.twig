{% extends 'base.html.twig' %}

{% block title %}InnovaElectra Store
{% endblock %}

{% block body %}

	<h1 class="text-secondary store-mt-title fw-bold">
		<span class="fw-bolder text-dark">Store.</span>
		Pour acheter vos
		<br>
		produits préférés, c’est ici.</h1>

	<div class="store-infos my-5">
		<div class="store-infos-display">
			<div>
				<i class="bi bi-person-fill-add"></i>
			</div>
			<div>
				<h2 class="fw-bold">Besoin d'aide pour faire vos achats ?</h2>
				<a href="">Contacter nos Spécialistes</a>
			</div>
		</div>
		<div class="store-infos-display">
			<div>
				<i class="bi bi-geo-alt-fill"></i>
			</div>
			<div>
				<h2 class="fw-bold">Se rendre dans un IE Store</h2>
				<a href="">Trouver un magasin à proximité ></a>
			</div>
		</div>
	</div>

	<div>
		<div class="row">
			{% for category in categories %}
				<div class="col-md-4">
					<div class="category mt-5">
						<a href="" class="category-link text-center">
							<img src="{{ asset('img/categories/' ~ category.image ) }}" alt="Categories Image" class="categories-img rounded">
							<h3 class="text-dark fw-bold">{{ category.title}}</h3>
						</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>


{% endblock %}